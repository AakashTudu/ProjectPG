<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvProperty"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/tvAmount"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="#dddddd"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvProperty"
                    android:paddingStart="15dp"
                    android:textStyle="bold"
                    tools:text="Tubelight" />

                <TextView
                    android:id="@+id/tvExpenseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAmount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Repairing" />


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:paddingStart="15dp"
                    android:text="Potatato, tomamto lena h bhai..."
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="10dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="â‚¹ 15700" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>