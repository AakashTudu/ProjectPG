<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvRoomRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Room Rent"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etRoomRent"
        app:layout_constraintStart_toStartOf="@+id/etRoomRent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="₹"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etRoomRent"
        app:layout_constraintStart_toStartOf="@+id/etRoomRent"
        app:layout_constraintTop_toTopOf="@+id/etRoomRent" />


    <EditText
        android:id="@+id/etRoomRent"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/text_input_layout"
        android:gravity="center_vertical"
        tools:hint="234533"
        android:inputType="number"
        android:paddingStart="35dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etSecondary"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    
    

    <TextView
        android:id="@+id/tvSecondaryDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Secondary Deposit"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etSecondary"
        app:layout_constraintStart_toStartOf="@+id/etSecondary" />

    <TextView
        android:id="@+id/icRupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="₹"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/etSecondary"
        app:layout_constraintStart_toStartOf="@+id/etSecondary"
        app:layout_constraintTop_toTopOf="@+id/etSecondary" />


    <EditText
        android:id="@+id/etSecondary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/text_input_layout"
        android:gravity="center_vertical"
        tools:hint="34634543"
        android:paddingStart="35dp"
        android:textAllCaps="false"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/etRoomRent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etRoomRent"
        app:layout_constraintTop_toTopOf="@+id/etRoomRent" />

</androidx.constraintlayout.widget.ConstraintLayout>
